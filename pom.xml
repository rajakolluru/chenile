            </dependency>
            <dependency>
                <groupId>org.chenile</groupId>
                <artifactId>chenile-http</artifactId>
                <version>${chenile.version}</version>
            </dependency>
            <dependency>
                <groupId>org.chenile</groupId>
                <artifactId>chenile-cache</artifactId>
                <version>${chenile.version}</version>
            </dependency>
            <dependency>
                <groupId>org.chenile</groupId>
                <artifactId>chenile-mqtt</artifactId>
                <version>${chenile.version}</version>
            </dependency>
            <dependency>
                <groupId>org.chenile</groupId>
                <artifactId>chenile-mqtt</artifactId>
                <version>${chenile.version}</version>

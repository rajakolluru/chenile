<?xml version="1.0" encoding="UTF-8"?>

<flows>
	<add-command-tag tag='if-auth-reportees' componentName='evaluateAuthReporteesRouter' defaultAttachmentTag="true"/>
		
	<flow id="queryControllerOrch">
		<chain componentName='queryControllerChain' first='true'>
			<!-- <command componentName="enhanceSystemFiltersCommand" /> -->
			
			<if-auth-reportees expression="queryName == 'Indent.getAll' || queryName == 'Order.getAll' || queryName == 'Trip.getAll' || queryName == 'ShipperIndent.getAll'">
				<chain componentName="iotQueryChain">
					<command componentName="iotSortingCommand" />
					<command componentName="authReporteesCommand" />
					<!-- <command componentName="queryControllerEmptyCommand" route="default" /> -->
				</chain>
			</if-auth-reportees>
			
			<command componentName="searchRequestCommand" />
		</chain>
	</flow>
</flows>